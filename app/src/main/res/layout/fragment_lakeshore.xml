<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mm="http://millennialmedia.com/android/schema"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="220dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="220dp"
                    android:id="@+id/scrollView"
                    android:layout_weight="0.57"
                    android:fadeScrollbars="false"
                    android:background="@drawable/leftborder">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:weightSum="1">
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Park Lawn Rd"
                            android:id="@+id/lakeshoreparklawn"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Ellis"
                            android:id="@+id/lakeshoreellis"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Colborne"
                            android:id="@+id/lakeshorecolborne"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Parkside Dr"
                            android:id="@+id/lakeshoreparkside"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Jameson"
                            android:id="@+id/lakeshorejameson"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Dunn"
                            android:id="@+id/lakeshoredunn"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="British Columbia Rd"
                            android:id="@+id/lakeshorebritishcolumbia"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Ontario"
                            android:id="@+id/lakeshoreontario"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Ontario Place"
                            android:id="@+id/lakeshoreontarioplace"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Remembrance"
                            android:id="@+id/lakeshoreremembrance"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Rees"
                            android:id="@+id/lakeshorerees"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Bay St"
                            android:id="@+id/lakeshorebay"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Yonge"
                            android:id="@+id/lakeshoreyonge"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Jarvis"
                            android:id="@+id/lakeshorejarvis"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Parliament"
                            android:id="@+id/lakeshoreparliament"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Don Roadway"
                            android:id="@+id/lakeshoredonroadway"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Leslie"
                            android:id="@+id/lakeshoreleslie"
                            android:clickable="true"
                            android:onClick="onButtonClickLakeshore"
                            android:textColor="#ffffff" />


                    </LinearLayout>
                </ScrollView>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:weightSum="1"
                    android:background="@drawable/border">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Reference Image"
                        android:id="@+id/textView"
                        android:textColor="#ffffff"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/toptextbox"
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:gravity="center|bottom"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.015"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/topView"
                        android:layout_weight="0.5" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/bottomtextbox"
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_gravity="bottom" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bottomView"
                        android:layout_weight="0.50"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>






            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:weightSum="1"
            android:gravity="bottom"
            android:layout_gravity="bottom">

            <TabHost
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tabHost">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"></TabWidget>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <LinearLayout
                            android:id="@+id/cameraTab"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/trafficView" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mapTab"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">

                            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:map="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/mapView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                map:cameraZoom="14"
                                map:cameraTilt="45"
                                android:name="com.google.android.gms.maps.MapFragment"/>



                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
            </TabHost>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>