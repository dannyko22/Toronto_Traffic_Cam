<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mm="http://millennialmedia.com/android/schema"
    android:background="#000000">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!--<com.millennialmedia.android.MMAdView-->
            <!--android:id="@+id/adView"-->
            <!--android:layout_width="320dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--mm:width="320"-->
            <!--mm:height="50"-->
            <!--mm:apid="152783"-->
            <!--android:layout_gravity="center_horizontal" />-->

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="220dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="220dp"
                    android:id="@+id/scrollView"
                    android:layout_weight="0.57"
                    android:fadeScrollbars="false"
                    android:background="@drawable/leftborder">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="210dp"
                        android:weightSum="1">
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Hwy 27"
                            android:id="@+id/hwy27onhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Pine Valley"
                            android:id="@+id/pinevalley"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Weston"
                            android:id="@+id/westononhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Jane"
                            android:id="@+id/janeonhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Keele"
                            android:id="@+id/keeleonhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Chalmers"
                            android:id="@+id/chalmersonhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Valleymede Dr"
                            android:id="@+id/valleymedeonhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="West Beaver Creek"
                            android:id="@+id/westbeavercreekonhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Leslie"
                            android:id="@+id/leslieonhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="East Beaver Creek"
                            android:id="@+id/eastbeavercreekonhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="404"
                            android:id="@+id/fourofouronhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="South Town Centre"
                            android:id="@+id/southtowncentreonhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="McCowan"
                            android:id="@+id/mccowanonhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Ninth Line"
                            android:id="@+id/ninthlineonhwy7"
                            android:clickable="true"
                            android:onClick="onButtonClickHwySeven"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:weightSum="1"
                    android:background="@drawable/border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Reference Image"
                        android:id="@+id/textView"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/toptextbox"
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:gravity="center|bottom"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.015"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/topView"
                        android:layout_weight="0.5" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/bottomtextbox"
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_gravity="bottom" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bottomView"
                        android:layout_weight="0.50"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>

            </LinearLayout>



        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:weightSum="1"
            android:layout_gravity="bottom">

            <TabHost
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tabHost">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"></TabWidget>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <LinearLayout
                            android:id="@+id/cameraTab"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/trafficView" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mapTab"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:map="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/mapView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                map:cameraZoom="14"
                                map:cameraTilt="45"
                                android:name="com.google.android.gms.maps.MapFragment"/>

                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
            </TabHost>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>